<% content_for :title do %>About Us<% end %>
<% content_for :description do %>This page will display information about our online ordering site.
<% end %>

<div class="container-fluid" id="selector_1">
  <div id="map-canvas"></div>
  <div class="container">

    <div class="row gravatar">
      <% if current_user %>
        <div class="col-md-4 col-md-offset-8">
          <div>
            <div id="the_gravatar"><%= gravatar_for @user %></div>
            <p class="hello_customer xxl_hello"><%= "Hi #{current_user.first_name}!" %></p>
            <p class="hello_customer l_hello push_up"><%= "Welcome back!" %></p>
            <p class="hello_companion"> <%= "There are #{ @cart.total_items } booze ice creams waiting for you!" %></p>
          </div>

          <%= link_to cart_path(@cart), class: "btn btn-success full top_hello", id: "hello_customer" do  %>
            Complete your Order <span class="glyphicon glyphicon-shopping-cart"></span>
          <% end %>

        </div>
      <% else %>
        <p>LOGIN SECTION</p>
      <% end %>
    </div>





    <div class="row">
      <% @categories.each do |category| %>
      <div class="col-md-3 category_box text-center"><%= category.title %></div>
      <% end %>
    </div>

    <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.image.url(:user_thumb) %></td>
      <td><%= link_to item.title, item_path(item) %></td>
      <td><%= item.description %></td>
      <td><%= number_to_currency(item.price) %></td>
      <td>
        <%= button_to "Add To Cart", cart_items_path(item_id: item) %>
      </td>
    </tr>
    <% end %>

  </div>
</div>

<% if notice %>
  <%= notice %>
<% end %>
